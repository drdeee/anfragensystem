generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Request {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  eventName      String
  eventTopic     String
  eventOrganizer String
  eventType      String

  isStationary Boolean

  date            DateTime
  startTime       DateTime
  expectedEndTime DateTime
  meetingTime     DateTime?

  startLocation   String
  meetingLocation String?

  expectedPeople Int

  requirements String[]

  contactName            String
  contactPhone           String
  contactAdditionalType  String
  contactAdditionalValue String

  cardId           BigInt
  telegramThreadId BigInt
}
